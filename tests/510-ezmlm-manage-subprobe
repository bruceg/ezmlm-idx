  prompt "subscribe probe:      "

  DEFAULT="subscribe"
  LOCAL="${LOC}-${DEFAULT}"
  ${EZBIN}/ezmlm-manage "$DIR" <"$TMP" >"$ERR" 2>&1 || \
  fatal "failed to produce subscribe probe"

  grephdr_manage
  grephdr reply-to: "${LOC}-sc\\..*\\..*-test=example.org@${HOST}"
  grephdr subject: "CONFIRM subscribe to ${LOC}@${HOST}"
  grephdr_empty

  ${ECHO} OK
